<p style="color: green"><%= notice %></p>

<h1>Bookings</h1>
<div id="showings">
<table class="table">
  <thead>
    <tr>
      <th style="width: 20%; text-align: center;">Screening time</th>
      <th style="width: 20%; text-align: center;">Screen</th>
      <th style="width: 20%; text-align: center;">Movie</th>
      <th style="width: 20%; text-align: center;">Seat</th>
      <th style="width: 20%; text-align: center;"></th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <% if booking.user_id == current_user.id %>
        <tr>
          <td style="width: 20%; text-align: center;"><%= booking.showing.screening_time %></td>
          <td style="width: 20%; text-align: center;"><%= booking.showing.screen.name %></td>
          <td style="width: 20%; text-align: center;"><%= booking.showing.movie.title %></td>
          <td style="width: 20%; text-align: center;"><%= booking.seat.number %></td>
          <td style="width: 20%; text-align: center;"><%= button_to "Delete this reservation", booking_path(booking),:method =>:delete, class:"btn btn-danger"%></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


</div>
